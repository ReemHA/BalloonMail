<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.balloonmail.app.balloonmailapp">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_balloonmail_app"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.balloonmail.app.balloonmailapp.MainActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.balloonmail.app.balloonmailapp.LoginTabbedActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.balloonmail.app.balloonmailapp.LoginTabbedActivity" />
        </activity>
        <activity
            android:name="com.balloonmail.app.balloonmailapp.MailsTabbedActivity"
            android:label="@string/title_activity_mails_tabbed"
            android:parentActivityName="com.balloonmail.app.balloonmailapp.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.balloonmail.app.balloonmailapp.MainActivity" />
        </activity>
        <activity
            android:name="com.balloonmail.app.balloonmailapp.LoginTabbedActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="com.balloonmail.app.balloonmailapp.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.balloonmail.app.balloonmailapp.HomeActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name="com.balloonmail.app.balloonmailapp.WriteMailActivity"></activity>
    </application>

</manifest>